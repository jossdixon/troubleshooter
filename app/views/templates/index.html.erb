<p id="notice"><%= notice %></p>
<div class="container">
  <div class="template-container">
    <div class="row mb-3">
      <div class="col-sm">
        <h1>Templates</h1>
      </div>
      <div class="col-sm">
        <%= link_to 'New Template', new_template_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <% @templates.each do |template| %>
      <div class="card-category">
        <p><%= link_to template do %>
            <%= template.name %> | <%= pluralize(template.template_items.count, 'item') %> </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
